<!DOCTYPE html>
<html class="h-full bg-gray-100">
  <head>
    <title>Admin — <%= content_for(:title) || APP_NAME %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="turbo-prefetch" content="false">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full" data-controller="drawer">
    <!-- Mobile Drawer (slide-in from right) -->
    <div>
      <!-- Backdrop -->
      <div data-drawer-target="backdrop"
           data-action="click->drawer#close"
           class="fixed inset-0 z-40 bg-black/60 opacity-0 pointer-events-none transition-opacity duration-300 md:hidden"></div>

      <!-- Drawer panel -->
      <div data-drawer-target="panel"
           class="fixed top-0 right-0 z-50 h-full w-72 bg-gray-900 text-white flex flex-col shadow-2xl translate-x-full transition-transform duration-300 ease-in-out md:hidden"
           aria-modal="true" role="dialog" aria-label="Navigation menu">

        <!-- Drawer header -->
        <div class="h-14 flex items-center justify-between px-4 border-b border-gray-700 flex-shrink-0">
          <span class="text-white font-bold text-lg tracking-wide">WF Admin</span>
          <button data-action="click->drawer#close"
                  class="text-gray-400 hover:text-white p-1 rounded transition-colors"
                  aria-label="Close menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <!-- Drawer nav links -->
        <nav class="flex-1 py-4 overflow-y-auto">
          <% unless current_user.delivery_admin? %>
            <%= link_to admin_dashboard_path,
                class: admin_nav_link_class("dashboard"),
                data: { action: "click->drawer#close", turbo_prefetch: false } do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Dashboard
            <% end %>

            <%= link_to admin_products_path,
                class: admin_nav_link_class("products"),
                data: { action: "click->drawer#close" } do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10" />
              </svg>
              Products
            <% end %>

            <%= link_to admin_orders_path,
                class: admin_nav_link_class("orders"),
                data: { action: "click->drawer#close" } do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              Orders
            <% end %>

            <%= link_to admin_analytics_path,
                class: admin_nav_link_class("analytics"),
                data: { action: "click->drawer#close" } do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Analytics
            <% end %>
          <% end %>

          <%= link_to delivery_orders_path,
              class: "flex items-center px-6 py-3 text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 transition-colors",
              data: { action: "click->drawer#close" } do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
            Delivery Queue
          <% end %>

          <% unless current_user.delivery_admin? %>
            <%= link_to admin_categories_path,
                class: admin_nav_link_class("categories"),
                data: { action: "click->drawer#close" } do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              Categories
            <% end %>

            <%= link_to admin_delivery_zones_path,
                class: admin_nav_link_class("delivery_zones"),
                data: { action: "click->drawer#close" } do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Delivery Zones
            <% end %>

            <% if current_user.super_admin? %>
              <%= link_to admin_settings_path,
                  class: admin_nav_link_class("settings"),
                  data: { action: "click->drawer#close" } do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Settings
              <% end %>
            <% end %>
          <% end %>

          <%= link_to root_path, target: "_blank",
              class: "flex items-center px-6 py-3 text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-700 transition-colors",
              data: { action: "click->drawer#close" } do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            View Storefront
          <% end %>
        </nav>

        <!-- Drawer user footer -->
        <div class="p-4 border-t border-gray-700 flex-shrink-0">
          <div class="flex items-center">
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-white truncate"><%= current_user.full_name %></p>
              <p class="text-xs text-gray-400 truncate">
                <%= current_user.role.humanize %>
                <% if current_user.admin_kind.present? %>(<%= current_user.admin_kind %>)<% end %>
              </p>
            </div>
            <%= link_to destroy_user_session_path,
                data: { turbo_method: :delete },
                class: "ml-2 text-gray-400 hover:text-white transition-colors",
                title: "Sign out" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-col md:flex-row min-h-full">
      <!-- Desktop Sidebar -->
      <div class="admin-sidebar md:w-56 lg:w-64 bg-gray-900 text-white flex flex-col flex-shrink-0">
        <div class="h-14 md:h-16 w-full flex items-center px-4 md:px-6 border-b border-gray-700 justify-between">
          <%= link_to admin_dashboard_path, class: "text-white font-bold text-lg tracking-wide" do %>
            KF Admin
          <% end %>

          <!-- Hamburger button — mobile only -->
          <button data-action="click->drawer#open"
                  class="md:hidden text-gray-400 hover:text-white p-1 rounded transition-colors"
                  aria-label="Open navigation menu"
                  aria-expanded="false">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>

        <nav class="hidden md:flex md:flex-col flex-1 py-4 overflow-y-auto">
          <% unless current_user.delivery_admin? %>
            <%= link_to admin_dashboard_path,
                class: admin_nav_link_class("dashboard"),
                data: { turbo_prefetch: false } do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Dashboard
            <% end %>

            <%= link_to admin_products_path,
                class: admin_nav_link_class("products") do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10" />
              </svg>
              Products
            <% end %>

            <%= link_to admin_orders_path,
                class: admin_nav_link_class("orders") do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              Orders
            <% end %>

            <%= link_to admin_analytics_path,
                class: admin_nav_link_class("analytics") do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Analytics
            <% end %>
          <% end %>

          <%= link_to delivery_orders_path,
              class: "flex items-center px-4 md:px-6 py-3 text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 transition-colors whitespace-nowrap flex-shrink-0" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
            Delivery Queue
          <% end %>

          <% unless current_user.delivery_admin? %>
            <%= link_to admin_categories_path,
                class: admin_nav_link_class("categories") do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              Categories
            <% end %>

            <%= link_to admin_delivery_zones_path,
                class: admin_nav_link_class("delivery_zones") do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Delivery Zones
            <% end %>

            <% if current_user.super_admin? %>
              <%= link_to admin_settings_path,
                  class: admin_nav_link_class("settings") do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Settings
              <% end %>

              <%= link_to root_path, target: "_blank",
                  class: "flex items-center px-4 md:px-6 py-3 text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-700 transition-colors whitespace-nowrap flex-shrink-0" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                View Storefront
              <% end %>
            <% end %>
          <% else %>
            <!-- Delivery admin: only View Storefront -->
            <%= link_to root_path, target: "_blank",
                class: "flex items-center px-4 md:px-6 py-3 text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-700 transition-colors whitespace-nowrap flex-shrink-0" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              View Storefront
            <% end %>
          <% end %>
        </nav>

        <div class="sidebar-user hidden md:block p-4 border-t border-gray-700">
          <div class="flex items-center">
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-white truncate"><%= current_user.full_name %></p>
              <p class="text-xs text-gray-400 truncate">
                <%= current_user.role.humanize %>
                <% if current_user.admin_kind.present? %>(<%= current_user.admin_kind %>)<% end %>
              </p>
            </div>
            <%= link_to destroy_user_session_path,
                data: { turbo_method: :delete },
                class: "ml-2 text-gray-400 hover:text-white transition-colors",
                title: "Sign out" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Main content -->
      <div class="admin-main flex-1 flex flex-col overflow-hidden min-w-0">
        <main class="flex-1 overflow-y-auto p-4 md:p-8">
          <div id="flash-messages" class="mb-4">
            <%= render "shared/flash_messages" %>
          </div>
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
