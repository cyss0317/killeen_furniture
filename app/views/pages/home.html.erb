<% content_for :title, "Killeen Furniture â€” Quality Home Furnishings" %>

<!-- Hero Section -->
<section class="relative bg-amber-900 text-white overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-amber-900 via-amber-800 to-amber-700 opacity-90"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
    <div class="max-w-2xl">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl mb-6">
        Furniture That Feels Like Home
      </h1>
      <p class="text-lg text-amber-100 mb-8">
        Quality Ashley Furniture pieces with local delivery to the Killeen area. Browse our curated collection and get it delivered right to your door.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <%= link_to "Shop All Furniture", products_path,
            class: "inline-flex items-center justify-center px-8 py-3 bg-white text-amber-900 font-semibold rounded-md hover:bg-amber-50 transition-colors" %>
        <% if DeliveryZone.active.any? %>
          <div class="inline-flex items-center text-amber-100 text-sm">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
            Local delivery available
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Category Grid -->
<% if @categories.any? %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h2 class="text-2xl font-bold text-gray-900 mb-8">Shop by Room</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <% @categories.each do |category| %>
        <%= link_to category_path(category), class: "group relative bg-amber-50 rounded-xl p-6 hover:bg-amber-100 transition-colors border border-amber-100 hover:border-amber-300" do %>
          <h3 class="font-semibold text-gray-900 group-hover:text-amber-800"><%= category.name %></h3>
          <% if category.subcategories.any? %>
            <p class="text-sm text-gray-500 mt-1"><%= category.subcategories.count %> subcategories</p>
          <% end %>
          <svg class="absolute right-4 top-1/2 -translate-y-1/2 w-5 h-5 text-amber-400 group-hover:text-amber-700 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      <% end %>
    </div>
  </section>
<% end %>

<!-- Featured Products -->
<% if @featured_products.any? %>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 pb-16">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold text-gray-900">Featured Pieces</h2>
      <%= link_to "View All", products_path, class: "text-sm font-medium text-amber-800 hover:text-amber-700" %>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @featured_products.each do |product| %>
        <%= render "products/product_card", product: product %>
      <% end %>
    </div>
  </section>
<% end %>

<!-- Delivery Zone Info -->
<section class="bg-amber-50 border-y border-amber-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Local Delivery Available</h3>
        <p class="text-gray-600">We deliver to select ZIP codes in the Killeen area. Enter your ZIP at checkout to see delivery options and pricing.</p>
      </div>
      <%= link_to "Start Shopping", products_path,
          class: "flex-shrink-0 inline-flex items-center px-6 py-3 bg-amber-800 text-white font-medium rounded-md hover:bg-amber-900 transition-colors" %>
    </div>
  </div>
</section>
