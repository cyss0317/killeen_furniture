<% content_for :title, "Order Confirmed — Killeen Furniture" %>

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-16 text-center">
  <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 mb-3">Order Confirmed!</h1>
  <p class="text-gray-500 mb-8">Thank you for your order. We've sent a confirmation email to <strong><%= @order.customer_email %></strong>.</p>

  <div class="bg-white rounded-xl border border-gray-100 p-6 text-left mb-8">
    <div class="flex justify-between items-start mb-4">
      <div>
        <h2 class="font-bold text-gray-900">Order #<%= @order.order_number %></h2>
        <p class="text-sm text-gray-400"><%= @order.created_at.strftime("%B %d, %Y at %l:%M %p") %></p>
      </div>
      <span class="px-3 py-1 bg-green-50 text-green-700 text-sm font-medium rounded-full">Confirmed</span>
    </div>

    <div class="divide-y divide-gray-50">
      <% @order.order_items.each do |item| %>
        <div class="py-3 flex justify-between text-sm">
          <div>
            <span class="font-medium text-gray-900"><%= item.product_name %></span>
            <span class="text-gray-400 ml-2">× <%= item.quantity %></span>
          </div>
          <span class="font-semibold"><%= number_to_currency(item.line_total) %></span>
        </div>
      <% end %>
    </div>

    <div class="mt-4 border-t border-gray-100 pt-4 space-y-1 text-sm">
      <div class="flex justify-between text-gray-600">
        <span>Subtotal</span>
        <span><%= number_to_currency(@order.subtotal) %></span>
      </div>
      <div class="flex justify-between text-gray-600">
        <span>Shipping</span>
        <span><%= number_to_currency(@order.shipping_amount) %></span>
      </div>
      <% if @order.tax_amount > 0 %>
        <div class="flex justify-between text-gray-600">
          <span>Tax</span>
          <span><%= number_to_currency(@order.tax_amount) %></span>
        </div>
      <% end %>
      <div class="flex justify-between font-bold text-base pt-2 border-t border-gray-100">
        <span>Total</span>
        <span><%= number_to_currency(@order.grand_total) %></span>
      </div>
    </div>

    <div class="mt-4 pt-4 border-t border-gray-100">
      <h3 class="text-sm font-semibold text-gray-700 mb-1">Delivery Address</h3>
      <p class="text-sm text-gray-600"><%= @order.customer_name %></p>
      <p class="text-sm text-gray-600"><%= @order.shipping_address_line %></p>
    </div>
  </div>

  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    <% if user_signed_in? %>
      <%= link_to "View My Orders", account_orders_path,
          class: "inline-block bg-amber-800 text-white font-semibold px-6 py-3 rounded-md hover:bg-amber-900 transition-colors" %>
    <% end %>
    <%= link_to "Continue Shopping", products_path,
        class: "inline-block border border-gray-300 text-gray-700 font-semibold px-6 py-3 rounded-md hover:bg-gray-50 transition-colors" %>
  </div>
</div>
