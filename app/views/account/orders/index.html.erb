<% content_for :title, "My Orders" %>
<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <h1 class="text-2xl font-bold text-gray-900 mb-8">My Orders</h1>
  <% if @orders.empty? %>
    <div class="text-center py-12 bg-white rounded-xl border border-gray-100">
      <p class="text-gray-500">You haven't placed any orders yet.</p>
      <%= link_to "Start Shopping", products_path, class: "mt-4 inline-block text-amber-800 hover:underline" %>
    </div>
  <% else %>
    <div class="space-y-4">
      <% @orders.each do |order| %>
        <div class="bg-white rounded-xl border border-gray-100 p-5">
          <div class="flex items-start justify-between mb-4">
            <div>
              <p class="font-mono font-semibold text-gray-900"><%= order.order_number %></p>
              <p class="text-xs text-gray-400"><%= order.created_at.strftime("%B %d, %Y") %></p>
            </div>
            <div class="text-right">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                <%= order.status.humanize %>
              </span>
              <p class="text-sm font-bold mt-1"><%= number_to_currency(order.grand_total) %></p>
            </div>
          </div>
          <%= link_to "View Order Details", account_order_path(order), class: "text-sm text-amber-700 hover:underline font-medium" %>
        </div>
      <% end %>
    </div>
    <% if @pagy.pages > 1 %>
      <div class="mt-6 flex justify-center"><%== @pagy.series_nav %></div>
    <% end %>
  <% end %>
</div>
