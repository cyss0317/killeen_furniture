<% content_for :title, "Order #{@order.order_number}" %>
<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="flex items-center gap-4 mb-6">
    <%= link_to "← My Orders", account_orders_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
    <h1 class="text-2xl font-bold text-gray-900 font-mono"><%= @order.order_number %></h1>
    <span class="px-3 py-0.5 text-xs font-medium bg-gray-100 text-gray-700 rounded-full">
      <%= @order.status.humanize %>
    </span>
  </div>

  <div class="bg-white rounded-xl border border-gray-100 overflow-hidden mb-6">
    <div class="divide-y divide-gray-50">
      <% @order.order_items.each do |item| %>
        <div class="px-6 py-4 flex justify-between text-sm">
          <div>
            <p class="font-medium text-gray-900"><%= item.product_name %></p>
            <p class="text-gray-400 text-xs">Qty: <%= item.quantity %> × <%= number_to_currency(item.unit_price) %></p>
          </div>
          <p class="font-semibold"><%= number_to_currency(item.line_total) %></p>
        </div>
      <% end %>
    </div>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 space-y-1 text-sm">
      <div class="flex justify-between text-gray-600"><span>Subtotal</span><span><%= number_to_currency(@order.subtotal) %></span></div>
      <div class="flex justify-between text-gray-600"><span>Shipping</span><span><%= number_to_currency(@order.shipping_amount) %></span></div>
      <div class="flex justify-between font-bold text-base pt-2 border-t border-gray-200 mt-2"><span>Total</span><span><%= number_to_currency(@order.grand_total) %></span></div>
    </div>
  </div>

  <div class="bg-white rounded-xl border border-gray-100 p-6">
    <h3 class="font-semibold text-gray-900 mb-3">Delivery Address</h3>
    <address class="text-sm text-gray-600 not-italic">
      <%= @order.shipping_address_line %>
    </address>
  </div>
</div>
