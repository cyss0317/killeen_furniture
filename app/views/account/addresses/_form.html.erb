<%= form_with model: [:account, address], class: "space-y-5" do |f| %>
  <%= render "shared/form_errors", object: address %>

  <div>
    <%= f.label :full_name, "Full name", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :full_name, autocomplete: "name",
        class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent",
        placeholder: "Jane Smith" %>
  </div>

  <div>
    <%= f.label :street_address, "Street address", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :street_address, autocomplete: "street-address",
        class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent",
        placeholder: "123 Main St, Apt 4B" %>
  </div>

  <div class="grid grid-cols-6 gap-4">
    <div class="col-span-3">
      <%= f.label :city, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :city, autocomplete: "address-level2",
          class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent",
          placeholder: "Killeen" %>
    </div>
    <div class="col-span-1">
      <%= f.label :state, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :state, autocomplete: "address-level1", maxlength: 2,
          class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 uppercase focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent",
          placeholder: "TX" %>
    </div>
    <div class="col-span-2">
      <%= f.label :zip_code, "ZIP code", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :zip_code, autocomplete: "postal-code", maxlength: 10,
          class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent",
          placeholder: "76541" %>
    </div>
  </div>

  <div class="flex items-center gap-2">
    <%= f.check_box :is_default, class: "w-4 h-4 text-amber-600 border-gray-300 rounded focus:ring-amber-500" %>
    <%= f.label :is_default, "Set as my default delivery address", class: "text-sm text-gray-700" %>
  </div>

  <div class="flex gap-3 pt-2">
    <%= f.submit address.new_record? ? "Save address" : "Update address",
        class: "bg-amber-700 hover:bg-amber-800 text-white font-semibold py-2.5 px-6 rounded-lg transition-colors cursor-pointer" %>
    <%= link_to "Cancel", account_addresses_path,
        class: "bg-white border border-gray-300 text-gray-700 font-semibold py-2.5 px-6 rounded-lg hover:bg-gray-50 transition-colors" %>
  </div>
<% end %>
