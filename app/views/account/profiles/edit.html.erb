<% content_for :title, "Edit Profile" %>
<div class="max-w-xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <h1 class="text-2xl font-bold text-gray-900 mb-8">Edit Profile</h1>
  <div class="bg-white rounded-xl border border-gray-100 p-6">
    <%= render "shared/form_errors", object: @user %>
    <%= form_with model: @user, url: account_profile_path, method: :patch, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :first_name, class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" %>
      </div>
      <div>
        <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :last_name, class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" %>
      </div>
      <div>
        <%= f.label :phone, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.telephone_field :phone, class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" %>
      </div>
      <div class="flex gap-3 pt-2">
        <%= f.submit "Save Profile", class: "bg-amber-800 text-white text-sm font-semibold py-2 px-6 rounded-md hover:bg-amber-900 cursor-pointer" %>
        <%= link_to "Cancel", account_profile_path, class: "border border-gray-300 text-gray-700 text-sm py-2 px-6 rounded-md hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>
</div>
