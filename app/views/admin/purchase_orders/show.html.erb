<% content_for :title, "PO: #{@po.reference_number}" %>

<div class="flex items-center gap-4 mb-6 flex-wrap">
  <%= link_to "← Purchase Orders", admin_purchase_orders_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
  <h1 class="text-2xl font-bold text-gray-900 font-mono"><%= @po.reference_number %></h1>
  <span class="px-3 py-1 rounded-full text-sm font-medium <%= status_badge_class(@po.status) %>">
    <%= @po.status.humanize %>
  </span>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

  <%# ── LEFT: Line items + Receive form ── %>
  <div class="lg:col-span-2 space-y-6">

    <%# Items table %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="font-semibold text-gray-900">Ordered Items</h2>
      </div>
      <table class="min-w-full divide-y divide-gray-100">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Ordered</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Received</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Remaining</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Unit Cost</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Line Total</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @items.each do |item| %>
            <tr>
              <td class="px-6 py-4">
                <%= link_to item.product_name, admin_product_path(item.product),
                      class: "text-sm font-medium text-amber-800 hover:underline" %>
                <p class="text-xs text-gray-400 font-mono">SKU: <%= item.product_sku %></p>
              </td>
              <td class="px-6 py-4 text-center text-sm"><%= item.quantity_ordered %></td>
              <td class="px-6 py-4 text-center text-sm">
                <% if item.quantity_received > 0 %>
                  <span class="text-green-600 font-medium"><%= item.quantity_received %></span>
                <% else %>
                  <span class="text-gray-400">0</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-center text-sm">
                <% remaining = item.remaining_quantity %>
                <% if remaining > 0 %>
                  <span class="text-amber-700 font-medium"><%= remaining %></span>
                <% else %>
                  <span class="text-gray-400">—</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-right text-sm text-gray-600">
                <%= number_to_currency(item.unit_cost) %>
              </td>
              <td class="px-6 py-4 text-right text-sm font-semibold">
                <%= number_to_currency(item.line_cost) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="px-6 py-3 border-t border-gray-100 flex justify-end">
        <p class="text-sm font-bold text-gray-900">
          Grand Total: <%= number_to_currency(@po.total_cost) %>
        </p>
      </div>
    </div>

    <%# Receive form — only shown when PO is receivable %>
    <% if @po.receivable? && policy(@po).receive? %>
      <div class="bg-white rounded-lg shadow-sm border border-amber-300 overflow-hidden">
        <div class="px-6 py-4 border-b border-amber-200 bg-amber-50">
          <h2 class="font-semibold text-gray-900">Record Receipt</h2>
          <p class="text-xs text-gray-500 mt-0.5">
            Enter quantities received and confirm the unit cost paid. Stock and product costs will be updated immediately.
          </p>
        </div>

        <%= form_with url: receive_admin_purchase_order_path(@po), method: :patch do |f| %>
          <table class="min-w-full divide-y divide-gray-100">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Remaining</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase w-32">Qty Received Now</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase w-36">Unit Cost</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @items.each do |item| %>
                <% next if item.remaining_quantity <= 0 %>
                <tr>
                  <td class="px-6 py-3 text-sm font-medium text-gray-900">
                    <%= item.product_name %>
                    <span class="text-xs text-gray-400 font-mono block">SKU: <%= item.product_sku %></span>
                  </td>
                  <td class="px-6 py-3 text-center text-sm text-amber-700 font-medium">
                    <%= item.remaining_quantity %>
                  </td>
                  <td class="px-6 py-3 text-center">
                    <div class="flex items-center gap-1 justify-center">
                      <input type="number"
                             name="items[<%= item.id %>][qty_to_receive]"
                             min="0" max="<%= item.remaining_quantity %>" value="0"
                             class="w-20 border border-gray-300 rounded-md px-2 py-1.5 text-sm text-center focus:outline-none focus:ring-2 focus:ring-amber-500">
                      <button type="button"
                              onclick="this.previousElementSibling.value = '<%= item.remaining_quantity %>'"
                              title="Fill all remaining (<%= item.remaining_quantity %>)"
                              class="text-green-700 hover:text-green-900 text-xs font-bold px-1.5 py-1 rounded border border-green-300 hover:border-green-500 transition-colors">
                        ✓
                      </button>
                    </div>
                  </td>
                  <td class="px-6 py-3 text-right">
                    <input type="number"
                           name="items[<%= item.id %>][unit_cost]"
                           min="0" step="0.01" value="<%= item.unit_cost %>"
                           class="w-28 border border-gray-300 rounded-md px-2 py-1.5 text-sm text-right focus:outline-none focus:ring-2 focus:ring-amber-500">
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <div class="px-6 py-4 border-t border-amber-200 bg-amber-50">
            <%= f.submit "Record Receipt & Update Stock",
                  class: "bg-green-700 text-white px-5 py-2.5 rounded-md hover:bg-green-800 font-medium text-sm cursor-pointer" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# ── RIGHT: Sidebar info ── %>
  <div class="space-y-6">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="font-semibold text-gray-900 mb-4">Order Info</h3>
      <dl class="space-y-3 text-sm">
        <div>
          <dt class="text-gray-500">Invoice #</dt>
          <dd class="font-mono font-medium text-gray-900 mt-0.5"><%= @po.reference_number %></dd>
        </div>
        <div>
          <dt class="text-gray-500">Status</dt>
          <dd class="mt-0.5">
            <span class="px-2 py-0.5 rounded-full text-xs font-medium <%= status_badge_class(@po.status) %>">
              <%= @po.status.humanize %>
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-gray-500">Date Ordered</dt>
          <dd class="mt-0.5"><%= @po.ordered_at&.strftime("%B %d, %Y") || "—" %></dd>
        </div>
        <div>
          <dt class="text-gray-500">Created</dt>
          <dd class="mt-0.5"><%= @po.created_at.strftime("%B %d, %Y at %l:%M %p") %></dd>
        </div>
        <% if @po.created_by %>
          <div>
            <dt class="text-gray-500">Created By</dt>
            <dd class="mt-0.5"><%= @po.created_by.full_name %></dd>
          </div>
        <% end %>
        <% if @po.notes.present? %>
          <div>
            <dt class="text-gray-500">Notes</dt>
            <dd class="mt-0.5 text-gray-700"><%= @po.notes %></dd>
          </div>
        <% end %>
      </dl>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="font-semibold text-gray-900 mb-3">Stock Summary</h3>
      <dl class="space-y-2 text-sm">
        <div class="flex justify-between">
          <dt class="text-gray-500">Items</dt>
          <dd class="font-medium"><%= @items.size %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-gray-500">Total Ordered</dt>
          <dd class="font-medium"><%= @items.sum(&:quantity_ordered) %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-gray-500">Total Received</dt>
          <dd class="font-medium text-green-600"><%= @items.sum(&:quantity_received) %></dd>
        </div>
        <div class="flex justify-between border-t border-gray-100 pt-2 mt-2">
          <dt class="text-gray-500">Total Cost</dt>
          <dd class="font-bold text-gray-900"><%= number_to_currency(@po.total_cost) %></dd>
        </div>
      </dl>
    </div>

    <%# Cancel action for draft/submitted POs — future enhancement placeholder %>
  </div>

</div>
