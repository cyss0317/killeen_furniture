<% content_for :title, "New Purchase Order" %>

<div class="flex items-center gap-4 mb-6">
  <%= link_to "← Purchase Orders", admin_purchase_orders_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
  <h1 class="text-2xl font-bold text-gray-900">New Purchase Order</h1>
</div>

<%# Embed product data for Stimulus controller %>
<script type="application/json" id="products-data">
  <%= raw(@products.each_with_object({}) { |p, h|
    h[p.id.to_s] = {
      name:      p.name,
      sku:       p.sku,
      base_cost: p.base_cost.to_f
    }
  }.to_json) %>
</script>

<%= form_with url: admin_purchase_orders_path, method: :post,
    data: { controller: "purchase-order" },
    class: "space-y-6" do |f| %>

  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-200 text-red-700 rounded-lg px-4 py-3 text-sm">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 xl:grid-cols-3 gap-6">

    <%# ── LEFT: Products table ── %>
    <div class="xl:col-span-2 space-y-6">

      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
          <h2 class="font-semibold text-gray-900">Products to Order</h2>
          <button type="button"
                  data-action="purchase-order#addProduct"
                  class="text-sm bg-amber-800 text-white px-3 py-1.5 rounded-md hover:bg-amber-900 font-medium">
            + Add Product
          </button>
        </div>

        <table class="min-w-full divide-y divide-gray-100">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase w-24">Qty</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase w-36">Unit Cost</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase w-32">Line Total</th>
              <th class="px-4 py-3 w-10"></th>
            </tr>
          </thead>
          <tbody data-purchase-order-target="lineItems" class="divide-y divide-gray-100">
            <%# Rows appended by Stimulus %>
          </tbody>
        </table>

        <div class="px-6 py-3 border-t border-gray-100 flex justify-end">
          <p class="text-sm font-semibold text-gray-700">
            Grand Total: <span data-purchase-order-target="grandTotal" class="text-gray-900">$0.00</span>
          </p>
        </div>
      </div>
    </div>

    <%# ── RIGHT: Order Info ── %>
    <div class="space-y-6">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 space-y-4">
        <h2 class="font-semibold text-gray-900">Order Details</h2>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Invoice # <span class="text-red-500">*</span>
          </label>
          <%= f.text_field :reference_number,
                placeholder: "e.g. ASH-2026-001",
                class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500",
                required: true %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
          <%= f.select :status,
                options_for_select([["Draft", "draft"], ["Submitted", "submitted"]], @po.status),
                {},
                class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Date Ordered</label>
          <%= f.date_field :ordered_at,
                value: @po.ordered_at,
                class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Notes</label>
          <%= f.text_area :notes, rows: 3,
                placeholder: "Delivery instructions, lead time, etc.",
                class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500 resize-none" %>
        </div>

        <%= f.submit "Create Purchase Order",
              class: "w-full bg-amber-800 text-white py-2.5 px-4 rounded-md hover:bg-amber-900 font-medium text-sm cursor-pointer mt-2" %>
      </div>
    </div>
  </div>
<% end %>

<%# Template row — cloned by Stimulus, never submitted directly %>
<template id="purchase-order-row-template">
  <tr data-purchase-order-target="row">
    <td class="px-4 py-3">
      <select name="purchase_order[line_items][][product_id]"
              data-action="change->purchase-order#productChanged"
              data-purchase-order-target="productSelect"
              class="w-full border border-gray-300 rounded-md px-2 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500">
        <option value="">— Select product —</option>
        <% @products.each do |p| %>
          <option value="<%= p.id %>" data-sku="<%= p.sku %>"><%= p.name %></option>
        <% end %>
      </select>
      <span class="text-xs text-gray-400 mt-0.5 block" data-purchase-order-target="skuLabel"></span>
    </td>
    <td class="px-4 py-3 text-center">
      <input type="number" name="purchase_order[line_items][][quantity_ordered]"
             min="1" value="1"
             data-action="input->purchase-order#recalculate"
             data-purchase-order-target="qty"
             class="w-20 border border-gray-300 rounded-md px-2 py-1.5 text-sm text-center focus:outline-none focus:ring-2 focus:ring-amber-500">
    </td>
    <td class="px-4 py-3 text-right">
      <input type="number" name="purchase_order[line_items][][unit_cost]"
             min="0" step="0.01" value="0.00"
             data-action="input->purchase-order#recalculate"
             data-purchase-order-target="unitCost"
             class="w-28 border border-gray-300 rounded-md px-2 py-1.5 text-sm text-right focus:outline-none focus:ring-2 focus:ring-amber-500">
    </td>
    <td class="px-4 py-3 text-right text-sm font-medium text-gray-700"
        data-purchase-order-target="lineTotal">$0.00</td>
    <td class="px-4 py-3 text-center">
      <button type="button"
              data-action="purchase-order#removeItem"
              class="text-red-400 hover:text-red-600 text-lg leading-none font-bold"
              title="Remove">×</button>
    </td>
  </tr>
</template>
