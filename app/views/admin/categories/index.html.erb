<% content_for :title, "Categories" %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Categories</h1>
  <%= link_to "Add Category", new_admin_category_path, class: "px-4 py-2 bg-amber-800 text-white text-sm font-medium rounded-md hover:bg-amber-900 transition-colors" %>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Parent</th>
        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Products</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100">
      <% @categories.each do |category| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 text-sm font-medium text-gray-900">
            <%= category.name %>
            <% if category.subcategories.any? %>
              <span class="text-xs text-gray-400 ml-2">(<%= category.subcategories.count %> subcategories)</span>
            <% end %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-600"><%= category.parent&.name || "â€”" %></td>
          <td class="px-6 py-4 text-center text-sm"><%= category.products.count %></td>
          <td class="px-6 py-4 text-right">
            <div class="flex justify-end gap-2">
              <%= link_to "Edit", edit_admin_category_path(category), class: "text-sm text-amber-700 hover:underline font-medium" %>
              <% unless category.products.any? %>
                <%= button_to "Delete", admin_category_path(category), method: :delete,
                    class: "text-sm text-red-600 hover:underline font-medium bg-transparent border-0 cursor-pointer p-0",
                    form: { data: { turbo_confirm: "Delete '#{category.name}'?" } } %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
