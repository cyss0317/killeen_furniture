<%= form_with model: [:admin, category], class: "space-y-4 max-w-md" do |f| %>
  <%= render "shared/form_errors", object: category %>

  <div>
    <%= f.label :name, "Category Name *", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, required: true, class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" %>
  </div>

  <div>
    <%= f.label :parent_id, "Parent Category (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.collection_select :parent_id, @parents, :id, :name, { include_blank: "— Top Level —" },
        { class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" } %>
  </div>

  <div>
    <%= f.label :position, "Display Order", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :position, min: 0, class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-amber-500" %>
  </div>

  <div class="flex gap-3 pt-2">
    <%= f.submit category.new_record? ? "Create Category" : "Save Changes",
        class: "bg-amber-800 text-white text-sm font-semibold py-2 px-6 rounded-md hover:bg-amber-900 cursor-pointer" %>
    <%= link_to "Cancel", admin_categories_path, class: "border border-gray-300 text-gray-700 text-sm font-medium py-2 px-6 rounded-md hover:bg-gray-50" %>
  </div>
<% end %>
