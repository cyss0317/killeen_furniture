<div class="mt-6 space-y-2 text-center text-sm text-gray-600">
  <%- if controller_name != 'sessions' %>
    <p><%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "text-amber-700 hover:text-amber-900 font-medium" %></p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p><%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "text-amber-700 hover:text-amber-900 font-medium" %></p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p><%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-amber-700 hover:text-amber-900 font-medium" %></p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-amber-700 hover:text-amber-900 font-medium" %></p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <p><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-amber-700 hover:text-amber-900 font-medium" %></p>
  <% end %>
</div>
