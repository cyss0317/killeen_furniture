<div class="max-w-2xl mx-auto py-12 px-4">
  <h1 class="text-2xl font-bold text-gray-900 mb-8">Account Settings</h1>

  <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Personal Information</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-5">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :first_name, autocomplete: "given-name",
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
          </div>
          <div>
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :last_name, autocomplete: "family-name",
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
          </div>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="mt-1 text-sm text-amber-700">Awaiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :phone, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.telephone_field :phone, autocomplete: "tel",
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
        </div>

        <hr class="border-gray-200" />

        <div>
          <h3 class="text-base font-semibold text-gray-900 mb-1">Change Password</h3>
          <p class="text-sm text-gray-500 mb-4">Leave blank to keep your current password.</p>

          <div class="space-y-4">
            <div>
              <div class="flex items-center justify-between mb-1">
                <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700" %>
                <% if @minimum_password_length %>
                  <span class="text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</span>
                <% end %>
              </div>
              <%= f.password_field :password, autocomplete: "new-password",
                  class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
            </div>

            <div>
              <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
            </div>
          </div>
        </div>

        <hr class="border-gray-200" />

        <div>
          <%= f.label :current_password, "Current password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <p class="text-xs text-gray-500 mb-1">Required to save any changes above</p>
          <%= f.password_field :current_password, autocomplete: "current-password",
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
        </div>

        <div class="flex gap-3 pt-2">
          <%= f.submit "Save changes", class: "bg-amber-700 hover:bg-amber-800 text-white font-semibold py-2.5 px-6 rounded-lg transition-colors cursor-pointer" %>
          <%= link_to "Cancel", account_profile_path, class: "bg-white border border-gray-300 text-gray-700 font-semibold py-2.5 px-6 rounded-lg hover:bg-gray-50 transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="bg-white rounded-2xl shadow-sm border border-red-200 p-8">
    <h2 class="text-lg font-semibold text-red-800 mb-2">Delete Account</h2>
    <p class="text-sm text-gray-600 mb-4">Permanently delete your account and all associated data. This cannot be undone.</p>
    <%= button_to "Delete my account", registration_path(resource_name),
        data: { turbo_confirm: "Are you sure you want to delete your account? This cannot be undone." },
        method: :delete,
        class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2.5 px-6 rounded-lg transition-colors cursor-pointer" %>
  </div>
</div>
