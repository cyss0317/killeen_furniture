<article class="group bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow border border-gray-100">
  <%= link_to product_path(product) do %>
    <div class="aspect-square bg-gray-100 overflow-hidden">
      <% if product.images.attached? && product.primary_image %>
        <%= image_tag product.primary_image.variant(resize_to_fill: [400, 400]),
            class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300",
            alt: product.name %>
      <% else %>
        <div class="w-full h-full flex items-center justify-center text-gray-300">
          <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="p-4">
    <p class="text-xs text-gray-400 mb-1"><%= product.brand %></p>
    <%= link_to product.name, product_path(product), class: "font-semibold text-gray-900 hover:text-amber-800 transition-colors line-clamp-2 text-sm" %>
    <div class="flex items-center justify-between mt-3">
      <span class="text-base font-bold text-gray-900"><%= number_to_currency(product.selling_price) %></span>
      <% if product.in_stock? %>
        <span class="text-xs text-green-600 font-medium">In Stock</span>
      <% else %>
        <span class="text-xs text-red-500 font-medium">Out of Stock</span>
      <% end %>
    </div>
  </div>
</article>
