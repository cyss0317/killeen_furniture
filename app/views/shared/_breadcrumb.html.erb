<% return if crumbs.blank? %>
<nav aria-label="Breadcrumb" class="max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-2">
  <ol class="flex items-center flex-wrap gap-x-1 gap-y-1 text-sm text-gray-500 min-w-0">
    <% crumbs.each_with_index do |(label, path), i| %>
      <% is_last = (i == crumbs.size - 1) %>
      <li class="flex items-center min-w-0 <%= is_last ? "flex-1" : "flex-shrink-0" %>">
        <% unless i == 0 %>
          <svg class="w-3 h-3 mx-1 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
        <% if is_last || path.nil? %>
          <span class="font-medium text-gray-800 truncate" aria-current="page"><%= label %></span>
        <% else %>
          <%= link_to label, path, class: "hover:text-amber-800 transition-colors truncate" %>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>
