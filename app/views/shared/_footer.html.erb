<footer class="bg-gray-900 text-gray-300 mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-white font-bold text-lg mb-4">Killeen Furniture</h3>
        <p class="text-sm text-gray-400">Quality furniture delivered to your home. Serving the Killeen, TX area and surrounding communities.</p>
      </div>
      <div>
        <h4 class="text-white font-semibold mb-4">Shop</h4>
        <ul class="space-y-2 text-sm">
          <%= link_to "All Products", products_path, class: "block hover:text-white transition-colors" %>
          <% Category.root_categories.limit(5).each do |cat| %>
            <%= link_to cat.name, category_path(cat), class: "block hover:text-white transition-colors" %>
          <% end %>
        </ul>
      </div>
      <div>
        <h4 class="text-white font-semibold mb-4">Account</h4>
        <ul class="space-y-2 text-sm">
          <% if user_signed_in? %>
            <%= link_to "My Orders", account_orders_path, class: "block hover:text-white transition-colors" %>
            <%= link_to "My Profile", account_profile_path, class: "block hover:text-white transition-colors" %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "block hover:text-white transition-colors" %>
            <%= link_to "Create Account", new_user_registration_path, class: "block hover:text-white transition-colors" %>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="border-t border-gray-700 mt-8 pt-6 text-sm text-gray-500 text-center">
      &copy; <%= Time.current.year %> Killeen Furniture. All rights reserved.
    </div>
  </div>
</footer>
